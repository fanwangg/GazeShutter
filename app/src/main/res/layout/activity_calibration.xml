<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_marker"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.fan.gazeshutter.activity.CalibrateActivity">

    <ImageView
        android:id="@+id/img_marker"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/pupil_calibration_marker"/>

    <ImageView
        android:id="@+id/img_marker_stop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/pupil_calibration_marker_stop"
        android:visibility="invisible"/>

</FrameLayout>


